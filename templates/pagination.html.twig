{% if pageCount > 1 %}
    <ul class="pagination">

        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
            </li>
        {% endif %}



        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}<span class="sr-only">(current)</span></span>
                </li>
            {% endif %}
        {% endfor %}


        {% if next is defined %}
            <li class="page-item">
                <a class="page-link" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&raquo;</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
            </li>
        {% endif %}



    </ul>
{% endif %}
